        <mxCell id="24" value="addSeckillVoucher(voucher) @Transactional&#xa;1) validateShopOwner(v.shopId)&#xa;2) INSERT tb_voucher（主表）&#xa;3) INSERT tb_seckill_voucher(voucher_id,stock,begin,end,limitType,userLimit)&#xa;4) 若 current.role=ADMIN：SET Redis stockKey；sv.preheatStatus=2&#xa;   否则：sv.preheatStatus=0（待审核/待预热）" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#ffffff;strokeColor=#82b366;fontSize=10;align=left;" vertex="1" parent="20">
          <mxGeometry x="20" y="470" width="480" height="160" as="geometry" />
