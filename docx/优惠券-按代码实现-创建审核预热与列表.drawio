          <mxGeometry x="20" y="640" width="480" height="140" as="geometry" />
        </mxCell>
        <mxCell id="26" value="queryVoucherOfShop(shopId)&#xa;Mapper.queryVoucherOfShop:&#xa;WHERE v.shop_id=? AND v.status=1&#xa;  AND (v.type=0 OR (v.type=1 AND sv.preheat_status &gt;= 2))&#xa;&#xa;queryVoucherOfShopForManage(shopId)&#xa;先 validateShopManager，再查询全量 ORDER BY v.create_time DESC" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#f5f5f5;strokeColor=#82b366;fontSize=10;align=left;" vertex="1" parent="20">
